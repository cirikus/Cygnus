<div class="page-wrapper">


  <div class="row">
      <div class="col-lg-12">
    
        <h1 class="page-header"><%= @task.id.to_s %> - <%= @task.title %></h1>
    
        <h6><em>Created at <%= @task.recorded_at.strftime('%d %B %Y') %>&nbsp;&nbsp;/&nbsp;&nbsp;Updated at <%= @task.updated_at.strftime('%d %B %Y') %></em></h6>
    
        <div class="panel-body">
          <p><%= raw @task.body %></p>
        </div>
        
        <div class="row">
          <%= render "comments/index" %>
        </div>
    
      </div>
  </div>

</div>