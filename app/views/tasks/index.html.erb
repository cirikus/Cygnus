<div class="page-wrapper">

  <!--<p>
    Download:
    <%= link_to "CSV", tasks_path(format: "csv") %> |
    <%= link_to "Excel", tasks_path(format: "xls") %>
  </p>-->
  
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Tasks List</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  
  <div class="row">
    <div class="col-lg-12">
        
        <!-- /.panel-heading -->
        <div class="panel-body">
          <table width="100%" class="table">
          <thead>
            <tr>
              <th>Id</th>
              <th>Task</th>
              <!--<th>Recorded at</th>
              <th>Modified at</th>-->
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% if @tasks.count == 0 %>
              No Result
            <% else %>
              <% @tasks.each do |task| %>
              <tr>
                <td><%= task.id %></td>
                <td><%= raw(task.title).truncate(358) %></td>
                <!--<td><%= task.recorded_at.to_s(:custom_datetime) %></td>
                <td><%= task.updated_at.to_s(:custom_datetime) %></td>-->
                <td olspan="3">
                  <div>
                    <%= link_to "View&nbsp;<i class='glyphicon glyphicon-eye-open'></i>".html_safe,  task_path(task), :class => "btn btn-xs btn-info"  %>
                    <% if admin_signed_in? %>
                      <%= link_to "Edit&nbsp;<i class='glyphicon glyphicon-edit'></i>".html_safe,  edit_task_path(task), :class => "btn btn-xs btn-primary"  %>
                      <%= link_to "Delete&nbsp;<i class='glyphicon glyphicon-remove'></i>".html_safe, task_path(task), :method => :delete,  data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger"    %>
                    <% end %>
                    <%= task.comments.count %> Comment(s)
                  </div>
              </tr>
              <% end %>
            <% end %>
          </tbody>
          </table>
        </div>
        
        <!--Pagination-->
        <%= paginate @tasks %>
        
      </div>
    </div>
  </div>
</div>