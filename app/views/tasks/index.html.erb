<div class="container">

  <p>
    Download:
    <%= link_to "CSV", tasks_path(format: "csv") %> |
    <%= link_to "Excel", tasks_path(format: "xls") %>
  </p>
  
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @tasks.each do |task| %>
    <div class="col-xs-12">
      <div class="text-left">
        <h2>
            <%= task.title %>
        </h2>
        <h6><em>Recorded at <%= task.recorded_at.to_s(:custom_datetime) %> / Last modification at <%= task.updated_at.to_s(:custom_datetime) %> </em></h6>
      </div>

      <div>
        <%= raw(task.body).truncate(358) %>
      </div>

      <div class="text-right">
        <%= link_to "Read more", task_path(task) %>
      </div>
      
      <hr />
    </div>
    <% end %>
    <% if @tasks.count == 0 %>
      <p>No result</p>
    <% end %>
  </div>

</div>